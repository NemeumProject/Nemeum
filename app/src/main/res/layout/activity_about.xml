<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorBackground"
    tools:context=".About">

    <Button
        android:id="@+id/backBtn"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_margin="5dp"
        android:background="@mipmap/back_icon"
        android:onClick="getBack" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_margin="3dp"
        android:text="@string/aboutButtonTitle"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/font25"
        android:textAlignment="center"
        android:textStyle="bold"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        android:layout_centerInParent="true"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:text="@string/aboutUsText"
        android:textSize="10sp"
        android:textAlignment="center"
        android:textColor="@color/colorWhite"/>

    <Button
        android:id="@+id/backButton"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_margin="100dp"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/navigation"
        android:text="@string/backButtonTitle"
        android:textSize="15dp"
        android:textAllCaps="false"
        android:textColor="@color/colorWhite"
        android:background="@drawable/months_rounded"
        android:backgroundTint="@color/colorBlue"
        android:onClick="getBack" />

    <android.support.design.widget.BottomNavigationView
        android:id="@+id/navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/colorBackground"
        app:menu="@menu/navigation"/>

</RelativeLayout>