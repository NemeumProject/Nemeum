<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorBackground"
    tools:context=".EditBook">

    <Button
        android:id="@+id/backBtn"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_margin="5dp"
        android:background="@mipmap/back_icon"
        android:onClick="getBack" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_margin="3dp"
        android:text="@string/bookingEditionTitle"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/font25"
        android:textAlignment="center"
        android:textStyle="bold"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="15dp"
        android:layout_below="@+id/backBtn"
        android:layout_above="@+id/navigation"
        android:background="@drawable/results_rounded">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/bookTitleText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:textColor="@color/colorFont"
                    android:textAlignment="center"
                    android:textSize="@dimen/font20"/>

                <CalendarView
                    android:id="@+id/bookDayCalendar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:layout_gravity="center"
                    android:firstDayOfWeek="2"
                    android:background="@color/colorBackground"/>

                <LinearLayout
                    android:id="@+id/startEndBook"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="horizontal">

                    <Spinner
                        android:id="@+id/startTime"
                        android:layout_width="130dp"
                        android:layout_height="40dp"
                        android:layout_margin="5dp"
                        android:spinnerMode="dropdown"
                        android:background="@drawable/months_rounded"
                        android:backgroundTint="@color/colorBackground" />

                    <Spinner
                        android:id="@+id/endTime"
                        android:layout_width="130dp"
                        android:layout_height="40dp"
                        android:layout_margin="5dp"
                        android:spinnerMode="dropdown"
                        android:background="@drawable/months_rounded"
                        android:backgroundTint="@color/colorBackground" />

                </LinearLayout>

                <Spinner
                    android:id="@+id/paymentMethod"
                    android:layout_width="270dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:layout_margin="5dp"
                    android:spinnerMode="dropdown"
                    android:background="@drawable/months_rounded" />

                <Button
                    android:id="@+id/confirmBookButton"
                    android:layout_width="270dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:layout_margin="5dp"
                    android:background="@drawable/months_rounded"
                    android:backgroundTint="@color/colorPink"
                    android:text="@string/buttonEdit"
                    android:textAllCaps="false"
                    android:textColor="@color/colorFont"
                    android:textSize="15sp" />

            </LinearLayout>
        </ScrollView>
    </RelativeLayout>

    <android.support.design.widget.BottomNavigationView
        android:id="@+id/navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/colorBackground"
        app:menu="@menu/navigation"/>

</RelativeLayout>