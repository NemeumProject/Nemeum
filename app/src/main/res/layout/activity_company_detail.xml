<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context=".EventFinder">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@mipmap/decathlon_back"/>

    <RelativeLayout
        android:id="@+id/companyDataLwt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="130dp"
        android:padding="3dp"
        android:background="@drawable/results_rounded"
        android:backgroundTint="@color/colorPrimaryDark">

        <TextView
            android:id="@+id/companyTitleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:text="Decathlon Sport Center"
            android:textColor="@color/colorPrimary"
            android:textSize="25sp"
            android:layout_centerHorizontal="true"/>

        <TextView
            android:id="@+id/companySloganText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/companyTitleText"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:text="Sports for all"
            android:textColor="@color/colorPrimary"
            android:textSize="20sp"/>

        <TextView
            android:id="@+id/companyPlaceText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_below="@+id/companySloganText"
            android:layout_centerHorizontal="true"
            android:text="Villeneuve D'Ascq, France"
            android:textColor="@android:color/white"
            android:textSize="15sp"/>

        <TextView
            android:id="@+id/trainerIIIText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_below="@+id/companyPlaceText"
            android:textColor="@android:color/white"
            android:layout_centerHorizontal="true"
            android:text="+33 155359755"
            android:textSize="15sp"/>
    </RelativeLayout>

    <ImageView
        android:id="@+id/companyLogoImg"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:background="@mipmap/decathlon_logo" />

    <RelativeLayout
        android:id="@+id/companyDescriptionLwt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/companyDataLwt"
        android:padding="10dp"
        android:background="@drawable/results_rounded"
        android:backgroundTint="@color/colorPrimaryDark">

        <TextView
            android:id="@+id/scenarioDescrTitleText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Our Facilities"
            android:textColor="@color/colorPrimary"
            android:textSize="15sp"/>

        <TextView
            android:id="@+id/scenarioDescriptionText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/scenarioDescrTitleText"
            android:text="Decathlon Sport Centre in Bethral Green includes a gym, day-spa, 33-metre swimming pool, Turkish bath and offers a wide range of excercise classes but is best known as a boxing arena, where the future champions like Lenoxx Lewis and Audley Harrisson learned they craft. the magnificient Georgian building, opened in 1929 by the duke of York , has played host to some of the world's greatests boxers with fights taking place in the grand main hall."
            android:textSize="12sp"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/monthSelect"
        android:layout_alignParentBottom="true"
        android:paddingTop="5dp"
        android:paddingLeft="18dp"
        android:background="@color/colorPrimaryDark">

        <Button
            android:id="@+id/homeButton"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_marginHorizontal="10dp"
            android:background="@mipmap/home_icon"/>

        <TextView
            android:id="@+id/homeTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/homeButton"
            android:paddingHorizontal="17dp"
            android:text="Home"
            android:textColor="@android:color/white" />

        <Button
            android:id="@+id/settingsButton"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_marginHorizontal="10dp"
            android:background="@mipmap/settings_icon"
            android:layout_toRightOf="@id/homeButton" />

        <TextView
            android:id="@+id/settingsTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/settingsButton"
            android:layout_toRightOf="@+id/homeTxt"
            android:paddingHorizontal="14dp"
            android:text="Settings"
            android:textColor="@android:color/white" />

        <Button
            android:id="@+id/loginButton"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_marginHorizontal="20dp"
            android:background="@mipmap/login_icon"
            android:layout_toRightOf="@id/settingsButton" />

        <TextView
            android:id="@+id/loginTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/loginButton"
            android:layout_toRightOf="@+id/settingsTxt"
            android:text="Login / Register"
            android:textColor="@android:color/white" />

        <Button
            android:id="@+id/accountButton"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_marginHorizontal="20dp"
            android:background="@mipmap/my_account_icon"
            android:layout_toRightOf="@id/loginButton" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/accountButton"
            android:layout_toRightOf="@+id/loginTxt"
            android:paddingHorizontal="10dp"
            android:text="My Account"
            android:textColor="@android:color/white" />

    </RelativeLayout>
</RelativeLayout>