<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorBackground"
    tools:context=".Notification">

    <Button
        android:id="@+id/backBtn"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_margin="5dp"
        android:background="@mipmap/back_icon"
        android:onClick="getBack" />

    <TextView
        android:id="@+id/TitleText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_margin="3dp"
        android:text="@string/notificationButtonTitle"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/font25"
        android:textAlignment="center"
        android:textStyle="bold"/>

    <Button
        android:id="@+id/notificationOnButton"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_margin="5dp"
        android:layout_above="@+id/notificationOffButton"
        android:layout_centerHorizontal="true"
        android:text="@string/onNotificationButtonTitle"
        android:textSize="15dp"
        android:textAllCaps="false"
        android:textColor="@color/colorFont"
        android:background="@drawable/months_rounded"
        android:backgroundTint="@color/colorPink"
        android:onClick="changeAlerts" />

    <Button
        android:id="@+id/notificationOffButton"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_margin="5dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:text="@string/offNotificationButtonTitle"
        android:textSize="15dp"
        android:textAllCaps="false"
        android:textColor="@color/colorFont"
        android:background="@drawable/months_rounded"
        android:backgroundTint="@color/colorPink"
        android:onClick="changeAlerts" />

    <Button
        android:id="@+id/backButton"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_margin="5dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/notificationOffButton"
        android:text="@string/saveBackButtonTitle"
        android:textSize="15dp"
        android:textAllCaps="false"
        android:textColor="@color/colorFont"
        android:background="@drawable/months_rounded"
        android:backgroundTint="@color/colorBlue"
        android:onClick="getBack"/>


    <android.support.design.widget.BottomNavigationView
        android:id="@+id/navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/colorBackground"
        app:menu="@menu/navigation"/>
</RelativeLayout>