<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#17252a">


    <TextView
        android:id="@+id/TitleText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="3dp"
        android:text="Post Scenario"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/font25"
        android:textStyle="bold"
        android:textAlignment="center"/>

    <Button
        android:id="@+id/backBtn"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_margin="5dp"
        android:background="@mipmap/back_icon"
        android:onClick="getBack" />

    <android.support.v7.widget.CardView
        android:id="@+id/imageScenario"
        android:layout_below="@+id/TitleText"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="30dp"
        app:cardCornerRadius="50dp"
        app:cardBackgroundColor="@color/colorHint">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:text="@string/selectPhoto"
            android:textSize="12sp"
            android:textColor="@color/colorWhite"/>

        <ImageView
            android:id="@+id/eventImg"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:scaleType="centerCrop" />

    </android.support.v7.widget.CardView>

    <Spinner
        android:id="@+id/sportScenario"
        android:layout_below="@+id/imageScenario"
        android:layout_width="250dp"
        android:layout_height="25dp"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="55dp"
        android:spinnerMode="dropdown"
        android:gravity="center"
        android:background="@drawable/months_rounded" />

    <EditText
        android:id="@+id/edit_scenario_title"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="350dp"
        android:background="@drawable/text_box"
        android:gravity="center"
        android:textColorHint="#17252a"
        android:hint="Title of Your Scenario"
        android:textSize="10sp"
        android:inputType="text"/>

    <EditText
        android:id="@+id/scenario_location"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="310dp"
        android:background="@drawable/text_box"
        android:gravity="center"
        android:textColorHint="#17252a"
        android:hint="Scenario Location"
        android:textSize="10sp"
        android:inputType="text"/>

    <Spinner
        android:id="@+id/cityScenario"
        android:layout_width="250dp"
        android:layout_height="25dp"
        android:spinnerMode="dropdown"
        android:layout_marginBottom="270dp"
        android:gravity="center"
        android:background="@drawable/months_rounded" />

    <EditText
        android:id="@+id/edit_scenario_desc"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="230dp"
        android:background="@drawable/text_box"
        android:gravity="center"
        android:textColorHint="#17252a"
        android:hint="Write your scenario description here..."
        android:textSize="10sp"
        android:inputType="text"/>


    <EditText
        android:id="@+id/scenario_capacity"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="190dp"
        android:background="@drawable/text_box"
        android:gravity="center"
        android:textColorHint="#17252a"
        android:hint="Scenario Capacity"
        android:textSize="10sp"
        android:inputType="number"/>

    <EditText
        android:id="@+id/scenario_price"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="150dp"
        android:background="@drawable/text_box"
        android:gravity="center"
        android:textColorHint="#17252a"
        android:hint="Scenario Price"
        android:textSize="10sp"
        android:inputType="number"/>

    <Button
        android:id="@+id/submit_scenario_post"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="90dp"
        android:background="@drawable/button_background1"
        android:layout_centerHorizontal="true"
        android:textColor="#17252a"
        android:text="POST" />

    <android.support.design.widget.BottomNavigationView
        android:id="@+id/navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="0dp"
        android:background="@color/colorBackground"
        app:menu="@menu/navigation"/>

</RelativeLayout>