<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/eventResultLwt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:layout_marginVertical="5dp"
        android:background="@drawable/results_rounded"
        android:padding="3dp">

        <ImageView
            android:id="@+id/eventResultImg"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="15dp"/>

        <TextView
            android:id="@+id/eventRecommendedText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/eventResultImg"
            android:visibility="gone"
            android:text="@string/recommendedEventTitle"
            android:textColor="@color/colorRed"
            android:textSize="10sp"/>

        <TextView
            android:id="@+id/eventResultTitleText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/eventRecommendedText"
            android:layout_toRightOf="@+id/eventResultImg"
            android:textColor="@color/colorFont"
            android:textSize="13sp"/>

        <TextView
            android:id="@+id/eventResultDescriptionText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/eventResultTitleText"
            android:layout_toRightOf="@+id/eventResultImg"
            android:textColor="@color/colorFont"
            android:textSize="10sp"/>

        <TextView
            android:id="@+id/eventResultDateText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/eventResultDescriptionText"
            android:layout_toRightOf="@+id/eventResultImg"
            android:textColor="@color/colorFont"
            android:textSize="10sp"/>

        <TextView
            android:id="@+id/eventResultPlaceText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/eventResultDateText"
            android:layout_toRightOf="@+id/eventResultImg"
            android:textColor="@color/colorFont"
            android:textSize="10sp"/>

    </RelativeLayout>
</LinearLayout>