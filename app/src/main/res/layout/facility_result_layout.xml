<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

<RelativeLayout
    android:id="@+id/facilityResultLwt"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:background="@drawable/results_rounded"
    android:padding="3dp">

    <ImageView
        android:id="@+id/facilityResultImg"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_margin="8dp"/>

    <Button
        android:id="@+id/bookFacilityResult"
        android:layout_width="60dp"
        android:layout_height="20dp"
        android:text="@string/buttonBook"
        android:layout_margin="5dp"
        android:textSize="10dp"
        android:layout_below="@+id/facilityResultImg"
        android:textColor="@color/colorFont"
        android:background="@drawable/months_rounded" />

    <Button
        android:id="@+id/scenarioFacilityResult"
        android:layout_width="60dp"
        android:layout_height="20dp"
        android:text="@string/buttonScenario"
        android:layout_margin="5dp"
        android:textSize="10dp"
        android:layout_below="@+id/bookFacilityResult"
        android:textColor="@color/colorFont"
        android:background="@drawable/months_rounded"
        android:backgroundTint="@color/colorPink"/>

    <TextView
        android:id="@+id/facilityResultTitleText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/facilityResultImg"
        android:textColor="@color/colorFont"
        android:textSize="15sp"/>

    <RatingBar
        android:id="@+id/starFacilityRating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/facilityResultTitleText"
        android:layout_toRightOf="@+id/facilityResultImg"
        android:numStars="5"
        android:stepSize=".1" />

    <TextView
        android:id="@+id/facilityResultPlaceText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/starFacilityRating"
        android:layout_toRightOf="@+id/facilityResultImg"
        android:textColor="@color/colorBlue"
        android:textSize="13sp"/>

    <TextView
        android:id="@+id/facilityResultEmailText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/facilityResultPlaceText"
        android:layout_toRightOf="@+id/facilityResultImg"
        android:textColor="@color/colorBlue"
        android:textSize="13sp"/>

    <TextView
        android:id="@+id/facilityResultDescriptionText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/facilityResultEmailText"
        android:layout_toRightOf="@+id/facilityResultImg"
        android:textColor="@color/colorFont"
        android:textSize="12sp"/>

</RelativeLayout>
</LinearLayout>