<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorWhite"
    tools:context=".activity_company_editionp">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@drawable/decathlon_back"/>

    <RelativeLayout
        android:id="@+id/companyDataLwt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="130dp"
        android:padding="3dp"
        android:background="@drawable/results_rounded"
        android:backgroundTint="@color/colorBackground">




        <EditText
            android:id="@+id/companyTitleEditText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="98dp"
            android:layout_marginTop="60dp"
            android:inputType="text"
            android:hint="@string/company_name"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/fields_edition" />

        <EditText
            android:id="@+id/companySloganEditText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/companyTitleEditText"
            android:layout_alignParentEnd="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="128dp"
            android:inputType="text"
            android:hint="@string/slogan"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/fields_edition" />

        <EditText
            android:id="@+id/companyPlaceEditText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/companySloganEditText"
            android:layout_alignParentEnd="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="-2dp"
            android:layout_marginEnd="86dp"
            android:inputType="text"
            android:hint="@string/user_Address"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/fields_edition" />

        <EditText
            android:id="@+id/companyCityEditText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/companyPlaceEditText"
            android:layout_alignParentEnd="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="-2dp"
            android:layout_marginEnd="86dp"
            android:inputType="text"
            android:hint="City"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/fields_edition" />

        <EditText
            android:id="@+id/companyPhoneEditText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/companyCityEditText"
            android:layout_alignParentEnd="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="107dp"
            android:inputType="text"
            android:hint="@string/user_Phone"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/fields_edition" />

        <Button
            android:id="@+id/btn_save_CompanyEditionP"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="260dp"
             android:layout_marginTop="8dp"
            android:background="@drawable/selected_month"
            android:onClick="save_CompanyEditionP"
            android:text="@string/buttonSave"
            android:textColor="@color/colorFont"
            android:textSize="10dp" />
    </RelativeLayout>

    <android.support.v7.widget.CardView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_margin="30dp"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"
        android:layout_centerHorizontal="true"
        app:cardCornerRadius="50dp"
        app:cardBackgroundColor="@color/colorHint">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:text="@string/selectPhoto"
            android:textSize="12sp"
            android:textColor="@color/colorWhite"/>

        <ImageView
            android:id="@+id/eventImg"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:scaleType="centerCrop" />
    </android.support.v7.widget.CardView>

    <RelativeLayout
        android:id="@+id/companyDescriptionLwt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/companyDataLwt"
        android:padding="10dp"
        android:background="@drawable/results_rounded"
        android:backgroundTint="@color/colorBackground">

        <TextView
            android:id="@+id/scenarioDescrTitleText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/ourFacilities"
            android:textColor="@color/colorBlue"
            android:textSize="15sp"/>

        <EditText
            android:id="@+id/scenarioDescriptionEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/scenarioDescrTitleText"
            android:textColor="@color/colorWhite"
            android:inputType="textMultiLine"
            android:hint="@string/description_Posting"
            android:textSize="12sp"/>
    </RelativeLayout>

    <android.support.design.widget.BottomNavigationView
        android:id="@+id/navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="0dp"
        android:background="@color/colorBackground"
        app:menu="@menu/navigation"/>

</RelativeLayout>