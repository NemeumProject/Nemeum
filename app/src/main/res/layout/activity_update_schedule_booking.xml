<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity_update_schedule_booking">


    <android.support.constraint.Guideline
        android:id="@+id/guideline10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.1" />

    <android.support.constraint.Guideline
        android:id="@+id/guidelinemid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5" />

    <android.support.constraint.Guideline
        android:id="@+id/guideline13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="1" />

    <LinearLayout
        android:id="@+id/topbar"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:background="#17252a"
        android:gravity="center"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/guideline10">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/bookingOK"
            android:textColor="@color/colorPink"
            android:textSize="@dimen/font25"
            android:textStyle="bold"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/topbar_back"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:orientation="vertical"
        android:background="#17252a"
        android:gravity="center"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="5dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/guideline10">

        <Button
            android:id="@+id/backBtn"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_margin="5dp"
            android:background="@mipmap/back_icon"
            android:onClick="getBack" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear_menu_book_1"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:padding="2dp"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true"

        app:layout_constraintBottom_toBottomOf="@+id/guideline12"
        app:layout_constraintTop_toBottomOf="@+id/guideline10"
        android:layout_marginRight="50dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="50dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintVertical_chainStyle="packed"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintVertical_bias="0.25">

        <TextView
            android:layout_width="270dp"
            android:layout_height="20dp"
            android:textSize="12sp"
            android:maxLines="2"
            android:text="@string/scenario_Daily_Schedule"
            android:textColor="@color/colorWhite"
            android:textAlignment="center"
            android:layout_marginTop="5dp"/>

        <TextView
            android:id="@+id/show_scenario_name"
            android:layout_width="270dp"
            android:layout_height="30dp"
            android:clickable="false"
            android:focusable="false"
            android:background="@drawable/months_rounded"
            android:contentDescription="@string/scenarios_spinner_Error" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear_menu_book_5"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="2dp"
        app:layout_constraintBottom_toBottomOf="@+id/guideline12"
        app:layout_constraintTop_toBottomOf="@id/linear_menu_book_1"
        android:layout_marginRight="50dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="50dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintVertical_chainStyle="packed"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintVertical_bias="0.25"
        >

        <TextView
            android:layout_width="270dp"
            android:layout_height="20dp"
            android:textSize="12sp"
            android:maxLines="2"
            android:text="@string/date_posting"
            android:textColor="@color/colorWhite"
            android:textAlignment="center"
            android:layout_marginTop="5dp"/>

        <TextView
            android:id="@+id/show_Date_Daily_Schedule"
            android:inputType="date"
            android:layout_width="270dp"
            android:layout_height="30dp"
            android:clickable="false"
            android:focusable="false"
            android:textSize="12dp"
            android:textAlignment="center"
            android:cursorVisible="true"
            android:background="@drawable/months_rounded"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear_menu_book_9"
        android:layout_width="140dp"
        android:layout_height="60dp"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="2dp"
        app:layout_constraintBottom_toBottomOf="@+id/guideline12"
        app:layout_constraintTop_toBottomOf="@id/linear_menu_book_5"
        app:layout_constraintRight_toRightOf="@id/guidelinemid"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintVertical_chainStyle="packed"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintVertical_bias="0.25"
        >

        <TextView
            android:layout_width="130dp"
            android:layout_height="20dp"
            android:textSize="12sp"
            android:maxLines="2"
            android:text="@string/starting_Time"
            android:textColor="@color/colorWhite"
            android:textAlignment="center"
            android:layout_marginTop="5dp"/>

        <TextView
            android:id="@+id/show_StartingTime_Daily_Schedule"
            android:layout_width="130dp"
            android:layout_height="30dp"
            android:textSize="12dp"
            android:textAlignment="center"
            android:clickable="false"
            android:focusable="false"
            android:inputType="time"
            android:cursorVisible="true"
            android:background="@drawable/months_rounded"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear_menu_book_10"
        android:layout_width="140dp"
        android:layout_height="60dp"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="2dp"
        app:layout_constraintBottom_toBottomOf="@+id/guideline12"
        app:layout_constraintTop_toBottomOf="@id/linear_menu_book_5"
        app:layout_constraintLeft_toLeftOf="@id/guidelinemid"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintVertical_chainStyle="packed"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintVertical_bias="0.25"
        >

        <TextView
            android:layout_width="130dp"
            android:layout_height="20dp"
            android:layout_marginTop="5dp"
            android:maxLines="2"
            android:text="@string/ending_Time"
            android:textAlignment="center"
            android:textColor="@color/colorWhite"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/show_EndingTime_Daily_Schedule"
            android:layout_width="130dp"
            android:layout_height="30dp"
            android:textSize="12dp"
            android:clickable="false"
            android:focusable="false"
            android:inputType="time"
            android:textAlignment="center"
            android:background="@drawable/months_rounded"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear_menu_book_13"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="2dp"
        app:layout_constraintBottom_toBottomOf="@+id/guideline12"
        app:layout_constraintTop_toBottomOf="@id/linear_menu_book_9"
        android:layout_marginRight="50dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="50dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintVertical_chainStyle="packed"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintVertical_bias="0.25"
        >

        <TextView
            android:layout_width="270dp"
            android:layout_height="20dp"
            android:layout_marginTop="5dp"
            android:maxLines="2"
            android:text="@string/user_Full_Name"
            android:textAlignment="center"
            android:textColor="@color/colorWhite"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/show_customerName"
            android:layout_width="270dp"
            android:layout_height="30dp"
            android:clickable="false"
            android:focusable="false"
            android:inputType="text"
            android:textSize="12dp"
            android:textAlignment="center"
            android:textCursorDrawable="@color/colorFont"
            android:cursorVisible="true"
            android:background="@drawable/months_rounded"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear_menu_book_17"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="2dp"
        app:layout_constraintBottom_toBottomOf="@+id/guideline12"
        app:layout_constraintTop_toBottomOf="@id/linear_menu_book_13"
        android:layout_marginRight="50dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="50dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintVertical_chainStyle="packed"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintVertical_bias="0.25"
        >

        <TextView
            android:layout_width="270dp"
            android:layout_height="20dp"
            android:layout_marginTop="5dp"
            android:maxLines="2"
            android:text="@string/user_Phone"
            android:inputType="phone"
            android:textAlignment="center"
            android:textColor="@color/colorWhite"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/show_customerPhone"
            android:layout_width="270dp"
            android:layout_height="30dp"
            android:textSize="12dp"
            android:clickable="false"
            android:focusable="false"
            android:textAlignment="center"
            android:textCursorDrawable="@color/colorFont"
            android:cursorVisible="true"
            android:background="@drawable/months_rounded"
            android:inputType="phone" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear_menu_book_23"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="2dp"
        app:layout_constraintBottom_toBottomOf="@+id/guideline12"
        app:layout_constraintTop_toBottomOf="@id/linear_menu_book_17"
        android:layout_marginRight="50dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="50dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintVertical_chainStyle="packed"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintVertical_bias="0.25"
        >

        <TextView
            android:layout_width="270dp"
            android:layout_height="20dp"
            android:layout_marginTop="5dp"
            android:maxLines="2"
            android:text="@string/user_Email"
            android:textAlignment="center"
            android:textColor="@color/colorWhite"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/show_customerEmail"
            android:layout_width="270dp"
            android:layout_height="30dp"
            android:inputType="textEmailAddress"
            android:clickable="false"
            android:focusable="false"
            android:cursorVisible="true"
            android:textCursorDrawable="@color/colorFont"
            android:textSize="12dp"
            android:textAlignment="center"
            android:background="@drawable/months_rounded"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear_menu_book_22"
        android:layout_width="144dp"
        android:layout_height="70dp"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="2dp"
        app:layout_constraintBottom_toBottomOf="@+id/guideline12"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintLeft_toLeftOf="@id/guidelinemid"
        app:layout_constraintTop_toBottomOf="@id/linear_menu_book_23"
        app:layout_constraintVertical_bias="0.25"
        app:layout_constraintVertical_chainStyle="packed">

        <Button
            android:id="@+id/btn_Back_and_Close"
            android:layout_width="125dp"
            android:layout_height="40dp"
            android:layout_marginTop="15sp"
            android:background="@drawable/button_background1"
            android:backgroundTint="@color/colorWhite"
            android:text="@string/backButtonTitle"
            android:textAllCaps="false"
            android:textColor="@color/colorBackground"
            android:textSize="12sp" />
    </LinearLayout>

    <android.support.design.widget.BottomNavigationView
        android:id="@+id/navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorBackground"
        app:layout_constraintBottom_toBottomOf="@+id/guideline13"
        app:menu="@menu/navigation"/>





</android.support.constraint.ConstraintLayout>