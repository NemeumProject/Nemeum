<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorBackground"
    tools:context=".BookScenarios">

    <Button
        android:id="@+id/backBtn"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_margin="5dp"
        android:background="@mipmap/back_icon"
        android:onClick="getBack" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_margin="3dp"
        android:text="@string/trainerBookTitle"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/font25"
        android:textAlignment="center"
        android:textStyle="bold"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="15dp"
        android:layout_below="@+id/backBtn"
        android:layout_above="@+id/navigation"
        android:background="@drawable/results_rounded">

        <ImageView
            android:id="@+id/bookTrainerImg"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_margin="10dp"
            android:layout_centerHorizontal="true"
            android:layout_above="@+id/TrainerNamesBook"/>

        <TextView
            android:id="@+id/TrainerNamesBook"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginRight="5dp"
            android:textAlignment="center"
            android:textColor="@color/colorFont"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/TrainerBookSportText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/TrainerNamesBook"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="6dp"
            android:layout_marginLeft="6dp"
            android:layout_marginEnd="4dp"
            android:layout_marginRight="4dp"
            android:textAlignment="center"
            android:textColor="@color/colorPink"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/TrainerBookPriceText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/TrainerBookSportText"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="6dp"
            android:layout_marginLeft="6dp"
            android:layout_marginEnd="4dp"
            android:layout_marginRight="4dp"
            android:textAlignment="center"
            android:textColor="@color/colorPink"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/TrainerBookDescriptionText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/TrainerBookPriceText"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="5dp"
            android:layout_marginLeft="15dp"
            android:layout_marginEnd="5dp"
            android:layout_marginRight="15dp"
            android:textAlignment="center"
            android:textColor="@color/colorFont"
            android:textSize="10dp" />

        <Button
            android:id="@+id/paymentButton"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_below="@+id/TrainerBookDescriptionText"
            android:layout_centerHorizontal="true"
            android:layout_margin="5dp"
            android:layout_marginStart="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/months_rounded"
            android:backgroundTint="@color/colorPink"
            android:onClick="scenarioBookPayment"
            android:text="@string/buttonDatePayment"
            android:textAllCaps="false"
            android:textColor="@color/colorFont"
            android:textSize="10dp" />
    </RelativeLayout>

    <android.support.design.widget.BottomNavigationView
        android:id="@+id/navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/colorBackground"
        app:menu="@menu/navigation"/>

</RelativeLayout>